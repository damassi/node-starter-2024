{
  "name": "node-starter-2024",
  "version": "0.0.1",
  "description": "Node.js starter app",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "vite build",
    "lint": "eslint --fix",
    "prettier": "prettier --write",
    "start": "tsx src/server.ts",
    "test": "jest",
    "prepare": "husky",
    "type-check": "tsc --noEmit"
  },
  "type": "module",
  "author": "Christopher Pappas <damassi.pappas@gmail.com>",
  "license": "MIT",
  "husky": {
    "hooks": {
      "post-merge": "sh scripts/pull-lock.sh",
      "pre-commit": "lint-staged && bin/detect-secrets hook",
      "pre-push": "yarn type-check"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,css,md}": "npm run prettier",
    "*.{js,ts,tsx}": "npm run lint"
  },
  "prettier": {
    "singleQuote": false,
    "semi": false,
    "trailingComma": "all"
  },
  "dependencies": {
    "@fastify/one-line-logger": "^1.4.0",
    "@fastify/vite": "^6.0.7",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "fastify": "^4.28.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tsx": "^4.17.0",
    "vite-express": "^0.18.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.9.0",
    "husky": "^9.1.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.9",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.4",
    "typescript-eslint": "^8.1.0",
    "vite": "^5.4.0",
    "vite-tsconfig-paths": "^5.0.1"
  }
}
